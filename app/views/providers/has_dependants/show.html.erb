<%= page_template page_title: t('.page_title'), template: :basic do %>
    <%= form_with(
          model: @form,
          url: providers_legal_aid_application_has_dependants_path(@legal_aid_application),
          method: :patch,
          local: true
      ) do |form| %>

    <%= govuk_form_group(
            show_error_if: @form.errors.present?,
            input: :has_dependants
        ) do %>

      <%= form.govuk_collection_radio_buttons :has_dependants,
                                              form.yes_no_radio_button_array,
                                              :value,
                                              :label,
                                              error: @error,
                                              title: {
                                                  text: t('.page_title'),
                                                  padding_below: 4
                                              } do %>
          <p class="govuk-body">
            <%= t('.info') %>
          </p>

          <ul class="govuk-list govuk-list--bullet">
            <% t('.list').each_line do |item| %>
              <li><%= item %></li>
            <% end %>
          </ul>

          <div class="govuk-inset-text">
            <p class="govuk-body">
              <%= t('.extra_info') %>
            </p>
          </div>
      <% end %>

    <% end %>

    <%= next_action_buttons(
            show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
            form: form
        ) %>
  <% end %>
<% end %>
