<%= page_template(
  page_title: t('.heading_1', firm_name: @firm.name),
  column_width: :full,
  back_link: :none
  ) do %>

  <%= form_with(
          model: @firm,
          url: admin_roles_permission_path,
          method: :patch,
          local: true
      ) do |form| %>

    <div class="govuk-!-margin-top-0govuk-!-padding-bottom-2">
      <fieldset class="govuk-fieldset">
        <div class="govuk-checkboxes">
          <div class="govuk-grid-row govuk-!-margin-top-0">
            <ul id="roles-list" class="govuk-grid-column-full govuk-list govuk-!-margin-bottom-0">
              <%= render partial: 'form', collection: @permissions, as: :permission, locals: { form: form } %>
            </ul>
          </div>
        </div>
      </fieldset>
    </div>

    <div class="govuk-!-padding-bottom-4"></div>

    <%= next_action_buttons(
            form: form,
            show_draft: false
        ) %>
  <% end %>
<% end %>
