        </div>
      </div>


    <!--  end search entry bar -->

    <!--  start display of provider firms/results -->
    <div class="govuk-grid-row govuk-!-margin-top-0">
      <ul id="firm-list" class="govuk-grid-column-full govuk-list govuk-!-margin-bottom-0">
        <li id="something-goes-here" class="govuk-grid-row govuk-!-margin-bottom-0" tabindex="0">
          <div class="govuk-grid-column-two-thirds text-column">
            <h2 class="govuk-heading-m govuk-!-margin-bottom-1 govuk-!-margin-top-6">
              <%= @provider_firms[0].name %>
            </h2>
          </div>

          <div class="govuk-grid-column-one-third control-column">
            <%= button_to(
                    t('generic.select_and_continue'),
