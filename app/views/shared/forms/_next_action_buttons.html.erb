<%= form.submit(
      continue_button_text,
      id: continue_id,
      name: 'continue_button',
      class: 'govuk-button form-button',
      data: { module: 'govuk-button' }
    ) %>

<% if show_draft %>
  <%= form.submit(
        draft_button_text,
        name: 'draft_button',
        id: 'draft_button',
        class: 'govuk-button form-button govuk-secondary-button',
        data: { module: 'govuk-button' }
      ) %>
<% end %>
